<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <%= stylesheet_link_tag "main.css" %>
  <!-- Scripts -->
  <%= javascript_include_tag 'jquery.min.js' %>
  <%= javascript_include_tag 'jquery.scrolly.min.js' %>
  <%= javascript_include_tag 'jquery.scrollex.min.js' %>
  <%= javascript_include_tag 'skel.min.js' %>
  <%= javascript_include_tag 'util.js' %>
  <%= javascript_include_tag 'main.js' %>

  <title>Blue Connection</title>

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
    <%= javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js" %>
  <![endif]-->

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <style>
   .menu {
     background-color: rgba(60,60,60,0.5);
     width: 60px; z-index: 99; position: fixed;
   }
  </style>
</head>
<body>
  <div id="navMenu" onmouseover="exibeMenu()" style="width: 60px; z-index: 99; position: fixed;">
    <div class="align-middle" style="text-align:center !important; color: #00CED1;">
      <i onclick="exibeMenu()" class="glyphicon glyphicon-globe" style="font-size: 30px; margin-top: 35%"></i>
    </div>
  </div>
  <div id="menuTeste" class="menu" onmouseover="exibeMenu()" onmouseout="retornaMenu()" class="align-middle" align="left" style="height: 100%; margin-top:56px; display: none !important;">
    <div class="align-middle" style="text-align:center !important; color: #00CED1;">
      <%= link_to root_url do %>
        <i id="home" onclick="linkHome()" class="glyphicon glyphicon-home" style="font-size: 30px; margin-top: 35%"></i>
      <% end %>
      <%= link_to users_path do %>
        <i id="user" onclick="linkUsers()" class="glyphicon glyphicon-user" style="font-size: 30px; margin-top: 35%"></i>
      <% end %><br>
      <%= link_to login_logout_path do %>
        <i class="fa fa-power-off" style="font-size: 30px; margin-top: 35%"></i><br>
      <% end %>
    </div>
  </div>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, class: "alert alert-#{ name == :error ? "danger" : "success" } alert-dismissable", role: "alert" do %>
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <%= msg %>
      <% end %>
    <% end %>

    <%= yield %>

    <script>
      function linkHome() {
        window.location.href="/"
      }
      function linkUsers() {
        window.location.href="/users"
      }

      function exibeMenu() {
        $('#menuTeste').show();
        $('#navMenu').addClass("menu")
      }

      function retornaMenu() {
        $('#menuTeste').hide();
        $('#navMenu').removeClass("menu")
      }


    </script>
  </body>
</html>
