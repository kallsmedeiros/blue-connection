<div class="container" style="margin-left:80px">
<br>
<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Cell phone</th>
      <th>Status</th>
      <th>Alteration user</th>
      <th>Address</th>
      <th>Email</th>
      <th>Receive email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.cell_phone %></td>
        <td><%= user.status %></td>
        <td><%= user.alteration_user_id %></td>
        <td><%= user.address %></td>
        <td><%= user.email %></td>
        <td><%= user.receive_email %></td>
        <td>
          <%= link_to user, title: "show" do %>
            <i class="glyphicon glyphicon-eye-open" style="font-size: 15px"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_user_path(user), title: "Edit" do %>
            <i class="glyphicon glyphicon-wrench" style="font-size: 15px"></i>
          <% end %>
        </td>
        <td>
          <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, title: "Destroy" do %>
            <i class="glyphicon glyphicon-trash" style="font-size: 15px"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_user_path, title: "New User" do %>
  <i class="glyphicon glyphicon-plus" style="font-size: 15px"></i>
  <i class="glyphicon glyphicon-user" style="font-size: 15px"></i>
<% end %>
